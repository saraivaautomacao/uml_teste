procedure TFormManProd.Table1NaoSaiTabelaGetText(Sender: TField;
  var Text: String; DisplayText: Boolean);
begin
  If Sender.value = True Then
    Text := 'S'
  Else
    Text := 'N';
end;

procedure TFormManProd.Table1NaoSaiTabelaSetText(Sender: TField;
  const Text: String);
begin
  IF Text = 'S' Then
    Sender.value := True
  Else
    Sender.value := False;
end;

