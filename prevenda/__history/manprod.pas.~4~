end;

procedure TFormManProd.RxDBGrid1DblClick(Sender: TObject);
begin
  If RxDBGrid1.FixedCols = 2 Then
    RxDBGrid1.FixedCols := 0
  Else
    RxDBGrid1.FixedCols := 2;
end;

