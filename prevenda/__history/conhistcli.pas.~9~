type
  TfrHistoricoCli = class(TForm)
    Panel1: TPanel;
    Label1: TLabel;
    fldCodigo: TComboEdit;
    fldNome: TStaticText;
    DataSource1: TDataSource;
    RxDBGrid2: TRxDBGrid;
    RxDBGrid3: TRxDBGrid;
    DataSource2: TDataSource;
    DataSource3: TDataSource;
    Label3: TLabel;
    Label4: TLabel;
    DBGrid1: TDBGrid;
    DBGrid2: TDBGrid;
    DataSource4: TDataSource;
